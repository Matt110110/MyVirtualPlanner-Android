<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="io.github.teamseven.myvirtualplanner.MainActivity">

    <include layout="@layout/top_toolbar"/>

    <TextView
        android:id="@+id/notice"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/shadow"
        android:elevation="20sp"
        android:padding="10sp"
        android:text="@string/icon_notice"
        app:layout_constraintBottom_toTopOf="@+id/hguide_bottom_notice"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/hguide_top_notice" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/hguide_bottom_notice">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            >

            <TextView
                android:textColor="#F92672"
                android:id="@+id/mainscreen_tv4"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_margin="5sp"
                android:background="@drawable/mainscreen_shadow1"
                android:elevation="20sp"
                android:padding="10sp"
                android:text="@string/mainscreen_task4" />

            <TextView
                android:textColor="#F92672"
                android:id="@+id/mainscreen_tv3"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_margin="5sp"
                android:background="@drawable/mainscreen_shadow1"
                android:elevation="20sp"
                android:padding="10sp"
                android:text="@string/mainscreen_task3" />

            <TextView
                android:textColor="#F92672"
                android:id="@+id/mainscreen_tv2"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_margin="5sp"
                android:background="@drawable/mainscreen_shadow1"
                android:elevation="20sp"
                android:padding="10sp"
                android:text="@string/mainscreen_task2" />

            <TextView
                android:textColor="#F92672"
                android:id="@+id/mainscreen_tv1"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_margin="5sp"
                android:background="@drawable/mainscreen_shadow1"
                android:elevation="20sp"
                android:padding="10sp"
                android:text="@string/mainscreen_task1" />
        </LinearLayout>
    </ScrollView>

    <android.support.constraint.Guideline
        android:id="@+id/hguide_top_notice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1" />

    <android.support.constraint.Guideline
        android:id="@+id/hguide_bottom_notice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.4" />


</android.support.constraint.ConstraintLayout>

