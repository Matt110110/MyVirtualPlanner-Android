<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What do you want us to remind you of ?"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#09b1f4"
        android:layout_marginLeft="5sp"
        android:layout_marginTop="10sp"/>

    <EditText
        android:id="@+id/textReminder"
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:layout_gravity="center"
        android:ems="10"
        android:layout_marginLeft="5sp"
        android:layout_marginRight="5sp"
        android:layout_marginTop="10sp"
        android:inputType="textMultiLine"
        android:background="#292d2c"/>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5sp"
        android:layout_marginLeft="5sp"
        android:layout_marginRight="5sp"
        android:layout_marginTop="10sp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <DatePicker
                android:id="@+id/datePicker4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="8sp" />

            <TimePicker
                android:id="@+id/timePicker"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="7sp"
                 />

            <TableLayout
                android:id="@+id/tableLayout1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:stretchColumns="*">
                <TableRow
                    android:id="@+id/tableRow1"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1">

                    <Button
                        android:id="@+id/tag_exam"
                        android:layout_marginTop="10sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="2sp"
                        android:layout_marginLeft="5sp"
                        android:background="@drawable/tag_bcg"
                        android:text="#exam"
                        android:textColor="#000000"/>

                    <Button
                        android:id="@+id/tag_assgn"
                        android:layout_marginTop="10sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5sp"
                        android:layout_marginLeft="2sp"
                        android:background="@drawable/tag_bcg"
                        android:text="#assignment"
                        android:textColor="#000000"/>

                </TableRow>
                <TableRow
                    android:id="@+id/tableRow2"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1">

                    <Button
                        android:id="@+id/tag_contest"
                        android:layout_marginTop="5sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="2sp"
                        android:layout_marginLeft="5sp"
                        android:background="@drawable/tag_bcg"
                        android:text="#contest"
                        android:textColor="#000000"/>

                    <Button
                        android:id="@+id/tag_others"
                        android:layout_marginTop="5sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5sp"
                        android:layout_marginLeft="2sp"
                        android:background="@drawable/tag_bcg"
                        android:text="#others"
                        android:textColor="#000000"/>

                </TableRow>
            </TableLayout>

            <Button
                android:id="@+id/submit_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:text="Save"
                android:background="#1f2811"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>